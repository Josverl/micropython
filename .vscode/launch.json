{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Sphinx Build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/sphinx-build.exe", // Adjust this path
            "args": [
                "-b",
                "html",
                "-d",
                "${workspaceFolder}/docs/doctrees",
                "-W",
                "--keep-going",
                "${workspaceFolder}/docs", // Adjust source folder path
                "${workspaceFolder}/build/html" // Adjust build folder path
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}